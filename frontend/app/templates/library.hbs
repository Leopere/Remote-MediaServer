{{#paper-toolbar}}
    <div class="md-toolbar-tools">
        {{#paper-sidenav-toggle as |toggle|}}
            {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
        {{/paper-sidenav-toggle}}
        <span class="md-breadcrumb-page">{{model.info.name}} ({{model.items.length}})</span>
    </div>
{{/paper-toolbar}}

{{#paper-content class="md-padding"}}
    {{#paper-list}}
        {{#each model.items as |item|}}
            {{#paper-item class="md-3-line" action=(action "itemClick" item)}}
                <div class="md-list-item-text">
                    <h3>{{item.title}}</h3>
                    <h4>{{item.year}}</h4>
                </div>
            {{/paper-item}}
        {{/each}}
    {{/paper-list}}
{{/paper-content}}