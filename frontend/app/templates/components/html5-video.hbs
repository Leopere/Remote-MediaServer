<video src={{videoUrl}} preload="none" autoplay class={{navClass}}></video>
{{#if loading}}
    {{md-loader mode="circular" size="small"}}
{{else if paused}}
    {{md-btn
        icon='mdi-av-play-arrow'
        action='togglePauseAction'
        buttonType='floating'
        class='btn-large'}}
{{/if}}

<div class="controls {{{navClass}}}">
    <img src={{mediaItem.poster-img}} />

    {{#if paused}}
        {{md-btn id="play-pause"
            icon='mdi-av-play-arrow'
            action='togglePauseAction'
            buttonType='floating'
            class='btn-large'}}
    {{else}}
        {{md-btn id="play-pause"
            icon='mdi-av-pause'
            action='togglePauseAction'
            buttonType='floating'
            class='btn-large'}}
    {{/if}}
    {{md-btn id="next"
        isDisabled=true
        icon='mdi-av-skip-next'
        action='prev'
        buttonType='floating'
        class='btn-medium'}}
    {{md-btn id="prev"
        isDisabled=true
        icon='mdi-av-skip-previous'
        action='next'
        buttonType='floating'
        class='btn-medium'}}
    <div class="buttonsRight">
        {{#if (gt mediacontent.video.length 1)}}
            {{#md-fixed-btns
                    btnIcon="mdi-av-videocam"
                    action="firstAction"
                    actionArgs="0"}}
                {{#md-collection content=mediacontent.video as |video|}}
                    <a href="javascript:void(0)" class="collection-item"  {{action 'setVideoChannel' video.value}}>
                        {{video.label}}
                    </a>
                {{/md-collection}}
            {{/md-fixed-btns}}
        {{/if}}
        {{#if (gt mediacontent.audio.length 1) }}
            {{#md-fixed-btns
                    btnIcon="mdi-image-audiotrack"
                    action="firstAction"
                    actionArgs="0"}}
                {{#md-collection content=mediacontent.audio as |audio|}}
                    <a href="javascript:void(0)" class="collection-item"  {{action 'setAudioChannel' audio.value}}>
                        {{audio.label}}
                    </a>
                {{/md-collection}}
            {{/md-fixed-btns}}
        {{/if}}
        {{#video-subtitles
            videoTag=videoObj
            mediaItem=mediaItem
            subtitles=mediacontent.subtitles
            currentTime=progress
            startOffset=startOffset}}
        {{/video-subtitles}}

        {{md-btn
            id="fullscreen"
            icon='mdi-navigation-fullscreen'
            action='fullscreen'
            buttonType='floating'
            class='btn-medium'}}
    </div>
    {{seek-bar offset=startOffset onSeek=(action "seek") progress=progress max=mediaItem.fileduration}}

    <span {{action "toggleMute"}} class={{muteIcon}} id="mute"></span>
    {{seek-bar id="volume" offset=0 onSeek=(action "volumeChange") progress=volume max=100}}
</div>