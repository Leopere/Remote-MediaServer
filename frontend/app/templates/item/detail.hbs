<div style="{{model.backdrop-img-style}}" class="movie-detail-backdrop"></div>
<div>
    <main>
        <div class="container detail">
            <h1>{{model.title}}</h1>
            <div class="poster" style="background: url({{{model.poster-img}}}) top center no-repeat"  data-poster-image={{model.id}}>
            </div>
            <div class="description">
                <div class="header">
                    {{ model.vote-average }}
                    <i class="material-icons">fiber_manual_record</i>
                    {{ model.year }}
                </div>
                <p>{{model.overview}}</p>
            </div>
            {{md-btn id="play"
                icon='mdi-av-play-arrow'
                action='play'
                buttonType='floating'
                class='btn-large'}}
        </div>
    </main>
</div>